generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Url {
  id              BigInt    @id @default(autoincrement())
  password        String?
  created_at      DateTime  @default(now())
  original_url    String      
}

model UrlAnalytics {
  url_id          BigInt    @id @unique
  last_accessed   DateTime  @default(now()) @updatedAt
  total_visits    Int       @default(0)
}